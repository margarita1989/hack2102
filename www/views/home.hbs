{{> top }}

<header>
        {{# if isLoggedIn}}
            {{ user.google.name }}
            <img src="{{user.google.image}}" alt=""/>
        {{ else }}
            <a href="/auth/google" class="login">SignIn with Google</a>
        {{/ if }}
</header>
<div class="content clearfix">
    <div class="menu_column left">
        <ul>
            <li>Main</li>
            <li class="btn btn-primary btn-upload"
                upload-button
                url="/upload"
                on-success="onSuccess(response)">Upload book</li>
            <li>Search</li>
            <li>Profile</li>
        </ul>
    </div>
    <div class="content_column">
        <div class="plain text"></div>
        <div class="pagination"></div>
    </div>
    <div class="menu_column col3">
        <ul>
            <li>Rating</li>
            <li>Reviews</li>
            <li></li>
        </ul>
    </div>
</div>
{{> bottom }}